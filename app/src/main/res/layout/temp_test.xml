<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/waptag_invitation_bg" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@color/write_50"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/inviteCompanyName"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_google_map" />

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="DHOOM DHOOM DHONI"
            android:layout_below="@id/imgLogo"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:id="@+id/txtinviteVisitStall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/inviteVisitStall"
            android:textColor="@color/text_color"
            android:layout_below="@+id/txtName"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtStall"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/te"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/grey_white_1000"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_center" />

        </RelativeLayout>

    </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/round">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/waptag_logo" />

            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</LinearLayout>