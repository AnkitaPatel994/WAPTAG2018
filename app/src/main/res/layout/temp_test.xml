<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/waptag_invitation_bg" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@color/write_50"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="23dp"
            android:textAllCaps="true"
            android:text="@string/inviteCompanyName"
            android:textColor="@color/text_color"
            android:textSize="21dp" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_google_map" />

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="DHOOM DHOOM DHONI"
            android:layout_below="@id/imgLogo"
            android:textColor="@color/text_color"
            android:textSize="21dp" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:id="@+id/txtinviteVisitStall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/inviteVisitStall"
            android:textColor="@color/text_color"
            android:layout_below="@+id/txtName"
            android:textSize="19dp" />

        <com.ankita.waptag2018.custom.TextViewCustomBold
            android:id="@+id/txtStall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/te"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="B-1"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_white_1000"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_center" />

    </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/round">
                
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/waptag_logo" />
            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</LinearLayout>