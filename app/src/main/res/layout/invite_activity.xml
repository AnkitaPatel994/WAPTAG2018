<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAdv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY" />

    <com.ankita.waptag2018.custom.TextViewCustom
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/only_registered_exhibitions"
        android:textColor="@color/grey_900"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_border_invite"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_upload" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"
            android:text="Upload Company Logo"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey_700"
            android:textSize="14dp" />

    </LinearLayout>

    <com.ankita.waptag2018.custom.TextViewCustom
        android:id="@+id/txtStallNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_border_invite"
        android:padding="10dp"
        android:textColor="@color/grey_black_1000"
        android:textColorHint="@color/grey_500"
        android:textSize="17dp" />

    <com.ankita.waptag2018.custom.TextViewCustom
        android:id="@+id/txtCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_border_invite"
        android:padding="10dp"
        android:textColor="@color/grey_black_1000"
        android:textColorHint="@color/grey_500"
        android:textSize="17dp" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/text_color"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Generate Invitation"
        android:textColor="@color/grey_white_1000" />

</LinearLayout>