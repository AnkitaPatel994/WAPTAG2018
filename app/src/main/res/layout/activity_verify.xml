<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAdv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_verification" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Please enter verification code"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/editPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/bg_white_round_old"
            android:drawableLeft="@drawable/ic_lock_small1"
            android:drawablePadding="15dp"
            android:hint="Write here"
            android:inputType="number"
            android:maxLength="10"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_400"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!--<com.gc.materialdesign.views.ButtonRectangle-->
            <!--android:id="@+id/btnSave"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@color/top_bar_color1"-->
            <!--android:text="@string/next"-->
            <!--android:textSize="10dp" />-->

            <Button
                android:id="@+id/butResend"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/grey_white_1000"
                android:textColor="@color/text_color"
                android:textSize="12sp">

                <!--<com.ankita.waptag2017.custom.TextViewCustom-->
                <!--android:id="@+id/textResend"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@android:color/white"-->
                <!--android:gravity="center"-->
                <!--android:text="NEXT"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:textSize="22sp"-->
                <!--android:visibility="visible"/>-->
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>