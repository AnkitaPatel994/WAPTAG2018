<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAdv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitXY" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="Company Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="Number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />


        <com.ankita.waptag2018.custom.TextViewCustom
            android:id="@+id/txtCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:drawableRight="@drawable/ic_navigation_arrow_drop_down"
            android:hint="Country"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:id="@+id/txtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:drawableRight="@drawable/ic_navigation_arrow_drop_down"
            android:hint="State"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp"
            android:visibility="gone" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="State"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp"
            android:visibility="gone" />

        <com.ankita.waptag2018.custom.EditTextCustom
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:hint="City"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <com.ankita.waptag2018.custom.TextViewCustom
            android:id="@+id/txtBusCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_contact_us"
            android:drawableRight="@drawable/ic_navigation_arrow_drop_down"
            android:hint="Business Category"
            android:padding="10dp"
            android:textColor="@color/grey_black_1000"
            android:textColorHint="@color/grey_600"
            android:textSize="15dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/grey_white_1000"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="10dp"
            android:onClick="callFinishVisitor"
            android:text="REGISTER"
            android:textColor="@color/text_color" />


    </LinearLayout>

</ScrollView>