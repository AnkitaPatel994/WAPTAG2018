<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAdv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="17dp"
        android:elevation="4dp"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/layout4"
                    style="@style/main_screen_layout"
                    android:layout_height="match_parent"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img4"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_attr" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img4"
                        android:text="ATTRACTIONS" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent" />

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/layout1"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img1"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_event" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img1"
                        android:text="EVENTS" />

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/layout2"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img2"
                        style="@style/main_screen_image"
                        android:padding="12dp"
                        android:src="@drawable/ic_layout" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img2"
                        android:text="LAYOUT" />


                </com.andexert.library.RippleView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/layout3"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img3"
                        style="@style/main_screen_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_exhibitor" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img3"
                        android:text="EXHIBITORS" />


                </com.andexert.library.RippleView>


                <com.andexert.library.RippleView
                    android:id="@+id/layout5"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img5"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_video" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img5"
                        android:text="VIDEOS" />


                </com.andexert.library.RippleView>


                <com.andexert.library.RippleView
                    android:id="@+id/layout6"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img6"
                        style="@style/main_screen_image"
                        android:padding="10dp"
                        android:src="@drawable/ic_transport" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img6"
                        android:text="SPONSERS" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/grey_white_1000" />

                </com.andexert.library.RippleView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/layout7"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img7"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_invite" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img7"
                        android:text="INVITE" />

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/layout9"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img9"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_visitor" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img9"
                        android:text="VISITORS" />

                </com.andexert.library.RippleView>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent" />

                <com.andexert.library.RippleView
                    android:id="@+id/layout8"
                    style="@style/main_screen_layout"
                    card_view:rv_color="@color/colorPrimary"
                    card_view:rv_rippleDuration="200">

                    <ImageView
                        android:id="@+id/img8"
                        style="@style/main_screen_image"
                        android:src="@drawable/ic_contact" />

                    <com.konnect.waptag2017.custom.TextViewCustom
                        style="@style/main_screen_text"
                        android:layout_below="@+id/img8"
                        android:text="CONTACT US" />

                </com.andexert.library.RippleView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>